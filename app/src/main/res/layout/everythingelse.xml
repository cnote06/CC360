<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/otherPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Other Phone"
        android:inputType="phone"
        android:text="Other Phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/otherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Nickname or goes by"
        android:inputType="text|textPersonName"
        android:text="Other Name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/otherPhone"
        app:layout_constraintRight_toRightOf="@+id/otherPhone"
        app:layout_constraintTop_toBottomOf="@+id/otherPhone"
        tools:text="Name" />

    <EditText
        android:id="@+id/homeAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Home Address"
        android:inputType="textPostalAddress"
        app:layout_constraintLeft_toLeftOf="@+id/otherName"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/otherName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/otherName" />

    <EditText
        android:id="@+id/businessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Company, Title"
        android:inputType="text"
        android:text="Business Name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/homeAddress"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/homeAddress"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/homeAddress" />

    <EditText
        android:id="@+id/businessAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Business Address"
        android:inputType="phone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/title" />

    <EditText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Title"
        android:inputType="text|textNoSuggestions"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/businessName"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/businessName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/businessName"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email 1"
        android:inputType="textEmailAddress"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/businessAddress"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/businessAddress"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/businessAddress"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email 2"
        android:inputType="textEmailAddress"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/email1"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/email1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/email1" />

    <EditText
        android:id="@+id/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Birthday"
        android:inputType="date"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/email2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/email2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/email2" />

    <EditText
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Notes"
        android:inputType="textMultiLine"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/birthday"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/birthday"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/birthday"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="71dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@+id/otherPhone"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="69dp"
        android:layout_height="26dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/spinner2"
        android:layout_marginTop="280dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinner2" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="69dp"
        android:layout_height="26dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinner"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.128" />

</android.support.constraint.ConstraintLayout>